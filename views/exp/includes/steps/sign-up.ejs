<section id="sign-up" data-order="<%= order %>" class="step<%= (typeof isCurrent === 'undefined') || !isCurrent ? ' is-hidden': '' %>">
    <h1>Sign up!</h1>
    <img src="/img/fave-bottle.png" title="Your Fave drink!" alt="Image of fave bottle"/>
    <form id="form-sign-up" action="#<%= order + 1 %>" method="get">
        <div class="formfield">
            <label for="email-address" class="is-hidden">Email address</label>
            <input name="email-address" type="email" placeholder="your email address"/>
            <button class="is-primary">Submit</button>
        </div>
    </form>
</section>